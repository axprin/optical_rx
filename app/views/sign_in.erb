<div class="container">

  <% if @error %>
    <div class="errors"><%= @error %></div>
  <% end %>

  <form id="sign-in" method="post" action="/sessions">
  <h2>Sign In</h2><br>
    <label class="label_form" for="email">Email</label>
    <input type="email" name="email" placeholder="e.g., me@example.com" value="<%= @email %>"><br>
    <label class="label_form" for="password">Password</label>
    <input type="password" name="password" placeholder="6 or more characters">
    <br><br>
    <div class="submit"><input type="submit" class="btn btn-lg btn-primary" value="Sign In"></div>
  </form>

</div>